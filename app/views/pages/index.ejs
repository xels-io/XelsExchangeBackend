<%- include('../layout/header'); -%>
<div class="container">
    <div class="brand">
        <h1 class="margin-bottom-min text">SELS To XELS Exchange Site</h1>
        <h3 class="detail-text">Simple &nbsp;&nbsp; Secure &nbsp;&nbsp; Transparent</h3>
    </div>
    <div class="content-wrapper">
        <form class="exchange-form" action="/order-submit" method="POST" name="exchangeXelSels">
            <div class="row">
                <div class="col-md-12 col-12 xels-exchange-section">

                    <div class="row">
                        <div class="col-md-6 col-sm-6 margin-bottom-max">
                            <div class="input-group mb-3">
                                <input type="number"  step="0.01" onkeypress="return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57 " class="form-control" placeholder="Deposit Sels Token Amount" name="eth_token_amount" id="eth_token_amount" required>
                                <div class="input-group-append">
                                    <span class="input-group-text">SELS</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="input-group mb-3">
                                <input type="number" step="0.01"onkeypress="return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57 " class="form-control" placeholder="Received Xels Amount" readonly="readonly" name="xels_amount" id="xels_amount" required>
                                <div class="input-group-append">
                                    <span class="input-group-text">XELS</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12 col-12">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Receiving Xels Address" name="xels_address" minlength="26" id="xels_address" required>
                    </div>
                </div>
            </div>
            <div class="">
                <button class="btn btn-success btn-custom" type="submit">Submit</button>
            </div>
        </form>
    </div>

</div>

<%- include('../layout/footer'); -%>